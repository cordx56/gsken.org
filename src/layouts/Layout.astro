---
import { siteTitle } from "@/consts";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="学園生活研究部のサイト" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    {
      pageTitle ? (
        <title>
          {pageTitle} &mdash; {siteTitle}
        </title>
      ) : (
        <title>{siteTitle}</title>
      )
    }
  </head>
  <body>
    <Header />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    @apply text bg;
  }
  .container {
    @apply w-full max-w-screen-md mx-auto px-3;
  }
  main a {
    @apply text-rose-500;
  }
  main h1 {
    @apply m-2 text-2xl;
  }
  main h2 {
    @apply m-2 text-xl;
  }
</style>
